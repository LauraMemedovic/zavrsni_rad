@model aplikacija1.Models.Omiljeni

@{
    ViewBag.Title = "Create";
}

<h2>Dodaj novi omiljeni recept i sastojak za kupovinu</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="font-size:medium">
            @Html.LabelFor(model => model.SastojakID, "Sastojak:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SastojakID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SastojakID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="font-size:medium">
            @Html.LabelFor(model => model.PopisRecepataID, "Naziv recepta:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PopisRecepataID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PopisRecepataID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Povratak na popis", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
